<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"

  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

  xmlns:p="http://www.springframework.org/schema/p"

  xsi:schemaLocation="http://www.springframework.org/schema/beans

        http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

<bean id="c" class="com.java.Customer">
<property name="firstname" value="Sakshi"></property>
<property name="lastname" value="Dhote"></property>
<property name="account" ref="acc"></property>
</bean>

<bean id="acc" class="com.java.Account">
<property name="balance" value="5000"></property>
</bean>
</beans>





